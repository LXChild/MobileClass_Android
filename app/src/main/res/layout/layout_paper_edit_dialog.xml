<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/layout_paper_edit_dialog"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <EditText
        android:id="@+id/et_paper_edit_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/layout_paper_edit_dialog_title_hint"
        android:maxLines="1" />

    <EditText
        android:id="@+id/et_paper_edit_dialog_remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/layout_paper_edit_dialog_remark_hint"
        android:maxLines="1" />
</LinearLayout>
